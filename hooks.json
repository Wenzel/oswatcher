{
    "configuration":
    {
        "neo4j_db": {
            "enabled": false,
            "delete": false,
            "replace": false
        },
        "desktop_ready_delay": 90
    },
    "hooks":
    [
        {
            "name": "hooks.filesystem.LibguestfsHook"
        },
        {
            "name": "hooks.filesystem.FilesystemHook",
            "configuration":
            {
                "enumerate": true,
                "log_progress": true,
                "log_progress_delay": 10,
                "inode_checksums": false
            }
        },
        {
            "name": "hooks.filesystem.GitFilesystemHook",
            "configuration":
            {
                "repo": "/path/to/repo",
                "file_content": false
            }
        }
    ]
}
